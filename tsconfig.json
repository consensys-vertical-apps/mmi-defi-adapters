{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "outDir": "lib/main",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "src/adapters/**/metadata/*.json"]
}
