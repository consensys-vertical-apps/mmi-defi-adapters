{
  "name": "defi-adapters-monorepo",
  "version": "0.14.0",
  "description": "Defi adapters monorepo for MMI Dashboard",
  "author": "MMI Team",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "npm run build -w packages/adapters-library -w packages/workers -w packages/adapters-cli -w packages/adapters-api",
    "build:watch": "npm run build:watch -w packages/adapters-library",
    "adapters-cli": "node --env-file=.env packages/adapters-cli/dist/index.js",
    "build-metadata-db": "npm run adapters-cli build-metadata-db --",
    "delete-adapter-metadata": "npm run adapters-cli delete-adapter-metadata --",
    "check-metadata-type": "npm run adapters-cli check-metadata-type --",
    "check-db-totals": "npm run adapters-cli check-db-totals --",
    "check-bad-snapshots": "npm run adapters-cli check-bad-snapshots --",
    "build-types": "npm run adapters-cli build-types --",
    "new-adapter": "npm run adapters-cli new-adapter --",
    "build-snapshots": "npm run adapters-cli build-snapshots --",
    "build-scoreboard": "npm run adapters-cli build-scoreboard --",
    "positions": "npm run adapters-cli positions --",
    "unwrap": "npm run adapters-cli unwrap --",
    "support": "npm run adapters-cli support --",
    "performance": "npm run adapters-cli performance --",
    "new-migration": "npm run adapters-cli new-migration --",
    "lint": "biome check packages",
    "fix": "npm run lint -- --write",
    "test": "npm run test:unit",
    "test:unit": "vitest run --project=unit",
    "test:smoke": "vitest run --project=smoke",
    "test:adapter-snapshots": "DEFI_ADAPTERS_TEST_FILTER_PROTOCOL=$npm_config_protocolid DEFI_ADAPTERS_TEST_FILTER_PRODUCT=$npm_config_productid vitest run --project=adapter-snapshots",
    "test:template-snapshots": "vitest run --project=template-snapshots",
    "test:template-snapshots:update": "npm run test:template-snapshots -- -u",
    "test:cov": "vitest run --coverage",
    "test:cov:merge": "vitest run --merge-reports --reporter=junit --coverage",
    "test:tsc": "npm run test:tsc --workspaces --if-present",
    "drop:db": "bash -c 'read -p \"Are you sure you know what you are doing? This will delete all .db files! (y/n): \" confirm && [ \"$confirm\" = \"y\" ] && rm ./metadata/*.db && echo \"All .db files have been deleted successfully.\" || echo \"Aborted. No files were deleted.\"'",
    "perf:simple": "k6 run k6-perf-test.js",
    "perf:load-test": "k6 run --env SCENARIO=load_test k6-perf-test.js",
    "perf:soak-test": "k6 run --env SCENARIO=soak_test k6-perf-test.js",
    "perf:spike-test": "k6 run --env SCENARIO=spike_test k6-perf-test.js",
    "perf:stress-test": "k6 run --env SCENARIO=stress_test k6-perf-test.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/k6": "^1.0.2",
    "@types/node": "^20.12.10",
    "@vitest/coverage-v8": "^3.0.9",
    "dotenv": "^16.4.5",
    "k6": "^0.0.0",
    "nodemon": "^3.1.0",
    "typescript": "^5.4.5",
    "vitest": "^3.0.9"
  }
}
